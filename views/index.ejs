<%- include("partials/header") %>
<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-danger float-right">Add New Campground</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>our most polpular sites</h3>
        </div>
    </div>
    <div class="row row-col-1 row-cols-md-4">
        <% campgrounds.forEach(function(camps){ %>
            <div class="col mb-4  d-flex flex-wrap">
                <div class="card" >
                    <img src="<%= camps.image %>" alt="" class="card-img-top img-fluid">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= camps.name %>
                        </h4>
                        <!-- <p class="card-text"><%= camps.description.slice(0, 100) %></p> -->
                        <div class=""><a href="/campgrounds/<%= camps._id %>" class="btn btn-primary card-link">
                            More Info
                        </a></div>
                    </div>
                </div>   
            </div>
        <% }) %>
    </div>
</div>
<%- include("partials/footer") %>