<%- include("partials/header") %>

<div class="container">
    <h1 class="display-3 mb-5 text-center">Create a New Campground</h1>
    <form action="/campgrounds" method="POST">
        <div class="form-group mx-auto" style="width: 30%;">
            <label for="expamleNewName">Name:</label>
            <input class="form-control" type="text" name="name" placeholder="Name">
        </div>
        <div class="form-group  mx-auto" style="width: 30%;">
            <label for="image_url">Image Url:</label>
            <input class="form-control" type="url" name="url" placeholder="image url">
        </div>
        <div class="form-group mx-auto" style="width: 30%;">
            <label for="expamleNewName">Description:</label>
            <textarea id="" cols="30" rows="10" name="description"></textarea>
        </div>
        <div class="mx-auto" style="width: 30%;">
            <button type="button mx-auto" class="btn btn-primary btn-block" >Add</button>
        </div>
        
    </form>
    
</div>
<%- include("partials/footer") %>