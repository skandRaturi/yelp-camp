<%- include("partials/header") %>

<div class="container">
    <h1 class="display-3 mb-5 text-center">Edit Comment</h1>
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
        <div class="form-group mx-auto" style="width: 30%;">
            <input class="form-control" type="text" name="comment[content]" value="<%= comment.content %>">
        </div>
        <div class="mx-auto" style="width: 30%;">
            <button type="button mx-auto" class="btn btn-primary btn-block" >Update</button>
        </div>
    </form>
    
</div>
<%- include("partials/footer") %>