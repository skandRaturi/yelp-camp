<%- include("partials/header") %>

<div class="container">
    <h1 class="display-3 mb-5 text-center">Edit <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group mx-auto" style="width: 30%;">
            <label for="expamleNewName">Name:</label>
            <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group  mx-auto" style="width: 30%;">
            <label for="image_url">Image Url:</label>
            <input class="form-control" type="url" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group mx-auto" style="width: 30%;">
            <label for="expamleNewName">Description:</label>
            <textarea id="" cols="30" rows="5" name="campground[description]" value="<%= campground.description %>"></textarea>
        </div>
        <div class="mx-auto" style="width: 30%;">
            <button type="button mx-auto" class="btn btn-primary btn-block" >Update</button>
        </div>
        
    </form>
    
</div>
<%- include("partials/footer") %>